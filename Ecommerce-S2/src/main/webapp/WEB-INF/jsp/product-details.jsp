<%@include file="segment/header.jsp" %>
<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <% String key="produit";
           if(request.getAttribute(key)!=null){
         Produit p=(Produit)request.getAttribute(key);   
        %>
        <form name="cart">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
                <div class="col-md-6">
                    <div class="small mb-1">SKU: BST-498</div>
                    <h1 class="display-5 fw-bolder"><%=p.getNom() %></h1>
                    <div class="fs-5 mb-5">
                        <!--<span class="text-decoration-line-through">$45.00</span>-->
                        <span>$<%=p.getPrix() %></span>
                    </div>
                    <p class="lead">
                        <%=p.getDescription()%>
                    </p>
                    <div class="d-flex">
                        <input type="hidden" name="id" value="<%=p.getId() %>">
                        <input type="hidden" name="nom" value="<%=p.getNom() %>">
                        <input type="hidden" name="prix" value="<%=p.getPrix() %>">
                        <input class="form-control text-center me-3" id="inputQuantity" name="quantite" type="num" value="1" style="max-width: 3rem" />
